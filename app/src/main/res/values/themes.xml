<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CineCatalog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary color: Blue -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color: Orange -->
        <item name="colorSecondary">@color/orange_primary</item>
        <item name="colorSecondaryVariant">@color/orange_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background color: Dark grey -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/gray_surface</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_text</item>

        <!-- Button styles -->
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.CineCatalog.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Dark Mode Colors -->
        <item name="colorPrimary">@color/blue_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/dark_background</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/blue_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.CineCatalog" parent="Base.Theme.CineCatalog" />
    <style name="Theme.CineCatalog.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>